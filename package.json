{
	"name": "simplewebsite",
	"version": "1.0.0",
	"description": "Simple website",
	"main": "server.js",
	"scripts": {
		"build-css": "stylus source/stylus/ -o static",
		"watch-css": "stylus source/stylus/ -o static -w",
		"clean": "rm -rf static && mkdir static",
		"build": "npm run clean && npm run build-css",
		"watch": "npm run clean && npm run watch-css && nodemon",
		"start": "node server",
		"server": "nodemon -e jade,js"
	},
	"author": "Jacob",
	"license": "ISC",
	"dependencies": {
		"express": "^4.14.0",
		"morgan": "^1.7.0",    "nodemon": "^1.9.2"

	}
}
